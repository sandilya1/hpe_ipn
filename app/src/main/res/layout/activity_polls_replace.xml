<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="10dp"
    android:fillViewport="false"
    tools:context="com.example.android.voteforcolor.PollsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="100dp">

        <TextView
            android:text="Please Edit Polls to Publish :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5pt"
            android:textSize="8pt"
            android:id="@+id/textView4" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Your Question Here"
            android:ems="10"
            android:layout_marginTop="33dp"
            android:id="@+id/question"
            android:layout_below="@+id/textView4"
            android:layout_alignStart="@+id/textView4" />

        <TextView
            android:text="Please Enter atleast 2 options Below"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:id="@+id/textView6"
            android:textSize="8pt"
            android:layout_below="@+id/question"
            android:layout_alignStart="@+id/question" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Option 1"
            android:ems="10"
            android:id="@+id/op1"
            android:layout_below="@+id/textView6"
            android:layout_alignStart="@+id/textView6"
            android:layout_marginTop="34dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Option 2"
            android:ems="10"
            android:id="@+id/op2"
            android:layout_below="@+id/op1"
            android:layout_alignStart="@+id/op1" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Option 3"
            android:ems="10"
            android:id="@+id/op3"
            android:layout_below="@+id/op2"
            android:layout_alignStart="@+id/op2" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Option 4"
            android:ems="10"
            android:id="@+id/op4"
            android:layout_below="@+id/op3"
            android:layout_alignStart="@+id/op3" />

        <Button
            android:text="Publish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/publish"
            android:onClick="publish"
            android:layout_alignBaseline="@+id/back"
            android:layout_alignBottom="@+id/back"
            android:layout_toEndOf="@+id/back" />

        <Button
            android:text="Sign Out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:onClick="exitApp"
            android:layout_alignBaseline="@+id/publish"
            android:layout_alignBottom="@+id/publish"
            android:layout_toEndOf="@id/publish"/>

        <Button
            android:text="Lock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back"
            android:onClick="save"
            android:layout_below="@+id/op4"
            />
    </RelativeLayout>
</ScrollView>